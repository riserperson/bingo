extends layout

block content
  h1=title
  div.container
    div.row
      form(method='POST' action='')
        div.form-group
          p Game Code: #{game.code} 
          label(for='name') Game Name:
          input#name.form-control(type='text' placeholder='Game Name' required='true')
          
    
        button.btn.btn-primary(type='submit') Start Game
    div.row
      div.form-group
        button.btn.btn-primary Add Space
    div.row
      ul.list-group#spaceList


  if errors 
    ul
      for error in errors
        li!= error.msg

script(type='text/javascript', src='../../javascripts/game_form.js')
