extends layout

block content
  div.row.w-75
    div.col
      div.border.rounded-3.text-center.text-box
        div.col-lg-6.offset-3
          form.justify-content-center(method='POST' action='/play/game/create')
            div.form-group
              button.btn.btn-tertiary.m-3(type='submit') Create a New Game
  div.row.w-75
    div.col
      div.border.rounded-3.text-box.text-center
        div.col-lg-6.offset-3
          form(method='POST' action='/play/game/join')
            input#desc.form-control.m-1(type='text' placeholder='CODE' name='gameCode' required='true')
            button.btn.btn-tertiary.m-1.form-control(type='submit') Participate in an Existing Game
    if errors 
      ul
        for error in errors
          li!= error.msg 
