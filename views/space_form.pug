extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='desc') Description:
      input#desc.form-control(type='text' placeholder='Description' name='desc' required='true' value=(undefined===space ? '' : space.desc))
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg
