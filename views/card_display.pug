extends layout

block content
  h1 Bingo Card
  input(id='gameId' type='hidden' value=card.GameId)
  input(id='cardId' type='hidden' value=card.id)
  table
    tr
      th B
      th I
      th N
      th G
      th O
    tr
      - var x = 1;
      - for (var i = 0; i < 5; i++)
        td(id='td'+spaces[i]['position'] class='space') 
          input(id='xLoc'+spaces[i]['position'] type = 'hidden' value = x)
          input(id='yLoc'+spaces[i]['position'] type = 'hidden' value = '5')
          | #{spaces[i]['checked']}
          input(id='checked'+i type='hidden' value = ''+spaces[i]['checked'])
          p 
            button(id = spaces[i]['position'] class='button') Check off
          - x++;
    tr
      - x = 1;
      - for (var i = 5; i < 10; i++)
        td(id='td'+spaces[i]['position'] class='space') 
          | #{spaces[i]['desc']}
          input(id='xLoc'+spaces[i]['position'] type = 'hidden' value = x)
          input(id='yLoc'+spaces[i]['position'] type = 'hidden' value = '4')
          p 
            button(id = spaces[i]['position'] class='button') Check off
          - x++;
    tr
      - x = 1;
      - for (var i = 10; i < 12; i++)
        td(id='td'+spaces[i]['position'] class='space') 
          | #{spaces[i]['desc']}
          input(id='xLoc'+spaces[i]['position'] type = 'hidden' value = x)
          input(id='yLoc'+spaces[i]['position'] type = 'hidden' value = '3')
          p 
            button(id = spaces[i]['position'] class='button') Check off
          - x++;
      td#freeSpace Free Space
      - x = 4;
      - for (var i = 13; i < 15; i++)
        td(id='td'+spaces[i]['id'] class='space') 
          | #{spaces[i]['desc']}
          input(id='xLoc'+spaces[i]['id'] type = 'hidden' value = x)
          input(id='yLoc'+spaces[i]['id'] type = 'hidden' value = '3')
          p 
            button(id = spaces[i]['id'] class='button') Check off
          - x++;
    tr
      - x = 1;
      - for (var i = 15; i < 20; i++)
        td(id='td'+spaces[i]['id'] class='space') 
          | #{spaces[i]['desc']}
          input(id='xLoc'+spaces[i]['id'] type = 'hidden' value = x)
          input(id='yLoc'+spaces[i]['id'] type = 'hidden' value = '2')
          p 
            button(id = spaces[i]['id'] class='button') Check off
          - x++;
    tr
      - x = 1;
      - for (var i = 20; i < 25; i++)
        td(id='td'+spaces[i]['id'] class='space') 
          | #{spaces[i]['desc']}
          input(id='xLoc'+spaces[i]['id'] type = 'hidden' value = x)
          input(id='yLoc'+spaces[i]['id'] type = 'hidden' value = '1')
          p 
            button(id = spaces[i]['id'] class='button') Check off
          - x++;
  append foot
    script(type='text/javascript', src='/javascripts/card_display.js')

